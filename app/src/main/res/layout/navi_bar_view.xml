<?xml version="1.0" encoding="utf-8"?>
<com.jackiehou.dragdemo.widget1.NaviBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/nav_bar_prl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/navigation_bar_bg"
            app:layout_heightPercent="17.5%w"/>

        <ImageView
            android:id="@+id/nav_hole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/nav_hole"
            android:scaleType="fitCenter"
            android:src="@mipmap/ball_tool"
            android:visibility="gone"
            app:layout_heightPercent="17.6%w"
            app:layout_widthPercent="17.6%w"
            />
        <!--app:layout_paddingTopPercent="18%h"
                app:paddingBottomPercent="8.3%h"-->
        <ImageView
            android:id="@+id/nav_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@mipmap/nav_left_btn"

            app:layout_heightPercent="15%w"
            app:layout_marginLeftPercent="4.27%w"
            app:layout_widthPercent="15%w"
            />

        <ImageView
            android:id="@+id/nav_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/nav_right_btn"
            app:layout_heightPercent="15%w"
            app:layout_marginRightPercent="4.27%w"
            app:layout_widthPercent="15%w"
            />
    </com.zhy.android.percent.support.PercentRelativeLayout>


</com.jackiehou.dragdemo.widget1.NaviBarLayout>
